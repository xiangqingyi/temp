<!DOCTYPE html>
<html>
<head>
  <% include ../../layouts/header %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <% include ../../layouts/main-header %>

  <% include ../../layouts/main-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%= pageinfo.pageTitle %>
        <small><%= pageinfo.titleDes %></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 首頁</a></li>
        <li><a href="<%= pageinfo.breadcrumb2ndhref %>"><%= pageinfo.breadcrumb2ndTitle %></a></li>
        <li class="active"><%= pageinfo.breadcrumb3rdTitle %></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">

          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= pageinfo.tableTitle %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <% 
              var formAction = pagestatus.type || 'add';
              var edit_disabled = '';
              if(formAction == 'edit'){
                formAction = formAction + "/" + pagestatus.params._id;
                edit_disabled = 'disabled';
              }
            %>  
            <form id="privilege_form" role="form" action="/privilege/<%= formAction %>" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label for="privilege_name">名稱</label>
                  <input type="text" class="form-control" id="privilege_name" name="privilege[name]" placeholder="請輸入名稱" value="<%= pagestatus.params.name %>">
                </div>
                <div class="form-group">
                  <label for="privilege_key">key</label>
                  <input type="text" class="form-control" id="privilege_key" name="privilege[key]" placeholder="請輸入key" value="<%= pagestatus.params.key %>">
                </div>                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-success">確認</button>
                <a href="/privilege" class="btn btn-danger">取消</a>
              </div>
            </form>
          </div>
          <!-- /.box -->

        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <% include ../../layouts/main-footer %>

  <% include ../../layouts/control-sidebar %>
  
</div>
<!-- ./wrapper -->

  <% include ../../layouts/footer-JS %>  
    <!-- myValidate-->
    <script src="../../dist/js/myValidate.js"></script>  
    <!-- page script -->    
    <script>
    $(document).ready(function() {
        $("#privilege_form").myValidate({
          rules: {
            'privilege[name]': "required",
            'privilege[key]': "required"
          }
        });
    });    
    </script>
  
</body>
</html>
